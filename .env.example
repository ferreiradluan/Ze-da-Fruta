# .env.example

# --- Application Configuration ---
PORT=3000
NODE_ENV=development

# --- Database Configuration ---
# Caminho para o arquivo do banco de dados SQLite dentro do contêiner Docker
DATABASE_PATH=./db/ze_da_fruta.sqlite

# --- Security Configuration ---
JWT_SECRET=coloque_um_segredo_forte_e_aleatorio_aqui
JWT_EXPIRES_IN=1d

# API Key for high-volume client access (optional)
API_KEY=your_api_key_here

# Rate Limiting Configuration
RATE_LIMIT_PUBLIC_TTL=60
RATE_LIMIT_PUBLIC_LIMIT=100
RATE_LIMIT_AUTH_TTL=60
RATE_LIMIT_AUTH_LIMIT=300
RATE_LIMIT_API_KEY_TTL=60
RATE_LIMIT_API_KEY_LIMIT=1000

# Security Headers Configuration
HELMET_ENABLED=true
CORS_ORIGIN=http://localhost:3001

# --- External Services ---
# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Frontend URL (para redirecionamento após autenticação)
FRONTEND_URL=http://localhost:3001

# Stripe API Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:3001/success
STRIPE_CANCEL_URL=http://localhost:3001/cancel