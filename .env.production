# .env.production - Configuração para produção no Heroku

# --- Application Configuration ---
NODE_ENV=production

# --- Database Configuration ---
# Caminho para o arquivo do banco de dados SQLite em produção
DATABASE_PATH=./ze_da_fruta.sqlite

# --- Security Configuration ---
# IMPORTANTE: Substitua por valores seguros em produção
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_pelo_menos_32_caracteres
JWT_EXPIRES_IN=1d

# API Key for high-volume client access
API_KEY=sua_api_key_segura_aqui

# Rate Limiting Configuration (mais restritivo em produção)
RATE_LIMIT_PUBLIC_TTL=60
RATE_LIMIT_PUBLIC_LIMIT=50
RATE_LIMIT_AUTH_TTL=60
RATE_LIMIT_AUTH_LIMIT=200
RATE_LIMIT_API_KEY_TTL=60
RATE_LIMIT_API_KEY_LIMIT=500

# Security Headers Configuration
HELMET_ENABLED=true
CORS_ORIGIN=https://seu-frontend.herokuapp.com

# --- External Services ---
# Google OAuth Configuration
GOOGLE_CLIENT_ID=seu_google_client_id
GOOGLE_CLIENT_SECRET=seu_google_client_secret
GOOGLE_CALLBACK_URL=https://seu-app.herokuapp.com/auth/google/callback

# Frontend URL
FRONTEND_URL=https://seu-frontend.herokuapp.com

# Stripe API Configuration
STRIPE_SECRET_KEY=sk_live_sua_chave_stripe_de_producao
STRIPE_WEBHOOK_SECRET=whsec_seu_webhook_secret
STRIPE_SUCCESS_URL=https://seu-frontend.herokuapp.com/success
STRIPE_CANCEL_URL=https://seu-frontend.herokuapp.com/cancel
